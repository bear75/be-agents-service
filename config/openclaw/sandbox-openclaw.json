{
  "$schema": "https://docs.openclaw.ai/schema.json",
  "_comment": "Sandbox config template. Copy to ~/.openclaw/openclaw.json. Use WORKSPACE_PATH only (no repo access). Replace placeholders.",
  "agent": {
    "workspace": "~/.openclaw/sandbox-workspace",
    "model": "claude-sonnet-4-20250514",
    "systemPromptFile": "/path/to/config/openclaw/son-system-prompt.md"
  },
  "channels": {
    "telegram": {
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "allowFrom": ["REPLACE_WITH_TELEGRAM_USER_ID"]
    },
    "whatsapp": {
      "allowFrom": ["REPLACE_WITH_WHATSAPP_NUMBER"]
    }
  },
  "mcpServers": {
    "agent-workspace": {
      "command": "node",
      "args": ["/path/to/Shared/agent-workspace-bridge/dist/index.js"],
      "env": {
        "WORKSPACE_PATH": "/full/path/to/AgentWorkspace/son-sandbox"
      }
    }
  }
}
